<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>narayana.performance.ejb</groupId>
        <artifactId>harness</artifactId>
        <version>7.3.1.Final-SNAPSHOT</version>
    </parent>
    <artifactId>ear</artifactId>
    <name>packaging (war and ejb)</name>
    <packaging>ear</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                    </archive>
                    <modules>
                        <webModule>
                            <groupId>narayana.performance.ejb</groupId>
                            <artifactId>ejb2-war-client</artifactId>
                            <bundleFileName>ejb2-war-client.war</bundleFileName>
                            <contextRoot>/perf</contextRoot>
                        </webModule>
                        <jarModule>
                            <groupId>narayana.performance.ejb</groupId>
                            <artifactId>ejb</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>narayana.performance.ejb</groupId>
            <artifactId>ejb2-war-client</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>narayana.performance.ejb</groupId>
            <artifactId>ejb</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>narayana.performance.ejb</groupId>
            <artifactId>api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>narayana.performance.ejb</groupId>
            <artifactId>ejb2</artifactId>
            <version>${project.version}</version>
            <classifier>client</classifier>
        </dependency>
    </dependencies>
</project>

